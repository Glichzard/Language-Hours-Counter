{
  "name": "lhc",
  "displayName": "Language Hours Counter",
  "publisher": "glichester",
  "description": "This extension allows you to have a count of the number of hours of programming for each language.",
  "version": "0.0.7",
  "icon": "./resources/icon.png",
  "license": "MIT",
  "pricing": "Free",
  "repository": "https://github.com/Glichzard/lhc",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lhc.toggleSessionCounter",
        "title": "Toggle session counter"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lhc-data",
          "title": "LHC Data",
          "icon": "resources/lhc.svg",
          "contextualTitle": "Language Hours Counter"
        }
      ]
    },
    "views": {
      "lhc-data": [
        {
          "id": "view-lhc-data",
          "name": "Total hours counted"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.19.3",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  }
}